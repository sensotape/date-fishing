<h2>Edit My Profile <%= @user.full_name %></h2>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name,
                autofocus: true ,
                input_html: { autocomplete: "name" }%>
    <%= f.input :last_name,
                autofocus: true ,
                input_html: { autocomplete: "last-name" }%>

    <%= f.input :bio %>
    <%= f.input :gender %>
    <%= f.input :seeking %>
    <%= f.input :birthday %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Edit My Profile" %>
  </div>
<% end %>





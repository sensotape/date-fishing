<div class="container">
  <div>
    <div class="photo">
      <%= cl_image_tag @experience.photos.first.picture %>
    </div>
    <h1><%= @experience.title %></h1>
    <p><%= @experience.user.full_name %></p>
    <p><%= @experience.category %></p>
    <p><%= @experience.location %></p>
    <p><%= @experience.description %></p>
    <button class="btn btn-primary" data-toggle="modal" data-target="#user-modal">Creator</button>
      <% render 'shared/user-modal' %>
    <p><%= @experience.start_date %></p>
    <p><%= @experience.end_date %></p>
    <div id="map" style="width: 600px; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

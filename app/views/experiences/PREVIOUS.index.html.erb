<style>
  .loader{
    position: fixed;
    height: 100vh;
    width: 100vw;
    z-index: 1000;
    background-color: #242038;
    /*transform: translateY(-70px);*/
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all ease 1s;
  }
  svg path,
svg rect{
  fill: #FF6700;
}
#loader-1{
  height: 50vh;
  width: 50vh;
  transform: translateY(70px);
}

</div>

<div class="container">

   <div class="filters-and-grid">
     <!-- FILTERS -->
      <div class="filters-container">
        <button class="btn btn-primary filter-item" data-toggle="modal" data-target="#category-filter-modal">Category</button>
        <%= render 'shared/category_filter_modal' %>
        <button class="btn btn-primary filter-item" data-toggle="modal" data-target="#date-filter-modal">Date</button>
        <%= render 'shared/date_filter_modal' %>
        <div class="search-bar search-bar-width filter-item">
          <%= form_tag experiences_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Explore an ocean of dates"
          %>
          <% end %>
        </div>
      </div>


      <!-- CARDS -->
      <% flash[:alert] = "Oops! It seems no dates match your criteria ðŸ˜”" if @experiences == [] %>
      <%= render 'shared/experiences_masonry', experiences: @experiences %>
    </div>

</div>

<div class="div-margin-large"></div>

<script>
  const loader = document.getElementById('loader')
  setTimeout(function(){
   loader.style.opacity = 0
   loader.style.pointerEvents = 'none'
   }, 0);
</script>

<div class='modal fade' id="edit-experience-modal-<%= experience.id %>" role=dialog">
  <div class="modal-dialog">
    <div class="modal-content modal-padding modal-background">

    <%= simple_form_for experience do |f| -%>
      <%= f.input :title %>
      <%= f.input :category %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.input :date %>
      <%= f.submit class:"btn btn-primary" %>

    <% end -%>

    <button class="btn btn-primary">
      <%= link_to "Cancel", experience, method: :delete, data: { confirm: "Are you sure about this?" } %>
    </button>
    </div>
  </div>
</div>

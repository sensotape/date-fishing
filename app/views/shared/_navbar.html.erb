<div class="navbar-wagon">

  <!-- FOR LARGER SCREENS -->
  <div class="hidden-xs hidden-sm">

    <!-- USER SIGNED IN -->
    <% if user_signed_in? %>
      <% notif_message = current_user.messages.unread.where(recipient: current_user).length > 0 ? 'notification' : 'notification hidden' %>

      <!-- LEFT OF LOGO -->
      <%= link_to "EXPLORE", experiences_path, class: "item-padding item-margin link-item" %>
      <%= link_to "CREATE", new_experience_path, class: "item-padding item-margin link-item" %>

      <!-- LOGO -->
      <%= link_to root_path, class: "navbar-logo" do %>
        <%= cl_image_tag "https://res.cloudinary.com/dkft9hkkv/image/upload/v1543947454/Date%20Fishing/datefishing-white.png" %>
      <% end %>

      <!-- RIGHT OF LOGO -->
      <%= link_to "MESSAGES", inbox_path, class: "item-padding item-margin link-item" %>
      <%= image_tag "heart.svg", class: notif_message, id: "message-notification" %>
      <%= link_to "PROFILE", user_path(current_user), class: "item-padding item-margin link-item" %>
      <%= image_tag "heart.svg", class: 'notification hidden', id: "profile-notification" %>

    <!-- USER NOT SIGNED IN -->
    <% else %>

      <!-- SIGN UP -->
      <button class="btn btn-primary" data-toggle="modal" data-target="#sign-up">Sign Up</button>
      <%= render 'shared/sign-up-modal' %>

      <!-- LOGO -->
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "https://res.cloudinary.com/dkft9hkkv/image/upload/v1543592610/Date%20Fishing/datefishing.png", height: 50 %>
      <% end %>

      <!-- LOG IN -->
      <button class="btn btn-primary" data-toggle="modal" data-target="#log-in">Log In</button>
      <%= render 'shared/log-in-modal' %>
    <% end %>
  </div>


  <!-- FOR SMALLER SCREENS -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Explore", experiences_path %></li>
          <li><%= link_to "Create", new_experience_path %></li>
          <li><%= link_to "Messages", inbox_path %></li>
          <li><a href="#">Profile</a><%#= link_to "Profile", user_path(current_user) %></li>
      </ul>
    </div>

  </div>
</div>



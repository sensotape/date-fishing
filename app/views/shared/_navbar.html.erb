<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQf5wBjy7iCrL5aaBlbQH07acVqOJcGKz9CZEy58_hH816PAOPm8w", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Random", experience_path(Experience.all.sample), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Explore", experiences_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Create", new_experience_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Messages", inbox_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://www.emojirequest.com/images/PurpleHeartExMarkEmoji.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Sign up link (when logged out) -->
      <button class="btn btn-primary" data-toggle="modal" data-target="#sign-up">Sign Up</button>
      <%= render 'shared/sign-up-modal' %>
      <!-- Log in link (when logged out) -->
      <button class="btn btn-primary" data-toggle="modal" data-target="#log-in">Log In</button>
      <%= render 'shared/log-in-modal' %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Random</a></li>
          <li><a href="#">Explore</a></li>
          <li><a href="#">Create</a></li>
          <li><a href="#">Messages</a></li>
          <li><a href="#">Profile</a></li>
      </ul>
    </div>
  </div>
</div>


<div class='modal fade' id="log-in" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content login-modal-content modal-padding modal-background">

      <button data-dismiss="modal" class="close">Ã—</button>
      <div class="login-title"><h2>Log in</h2></div>
        <div class="login-form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
      <% end %>

    </div>
  </div>
</div>



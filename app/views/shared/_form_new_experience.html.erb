<%= simple_form_for @experience do |f| -%>

  <%= f.input :title, required: true, error: 'Must have between 4 and 50 characters' %>

  <%= f.input :description, required: true %>

  <%= f.input :start_date, required: true %>

  <%= f.input :end_date, required: true %>

  <%= f.input :location, required: true, error: 'Must contain at least 8 characters', id: 'flat_address' %>

  <%= f.input :category, required: true, collection: Experience::CATEGORIES %>

  <%= f.submit class: "btn btn-primary"%>

<% end %>

